<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/green"
                android:endColor="@color/green"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/lblue" />
            <padding
                android:left="@dimen/button_pad"
                android:top="@dimen/button_pad"
                android:right="@dimen/button_pad"
                android:bottom="@dimen/button_pad" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="@color/green"
                android:endColor="@color/green"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/gold" />
            <padding
                android:left="@dimen/button_pad"
                android:top="@dimen/button_pad"
                android:right="@dimen/button_pad"
                android:bottom="@dimen/button_pad" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="@color/green"
                android:endColor="@color/green"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/black" />
            <padding
                android:left="@dimen/button_pad"
                android:top="@dimen/button_pad"
                android:right="@dimen/button_pad"
                android:bottom="@dimen/button_pad" />
        </shape>
    </item>
</selector>